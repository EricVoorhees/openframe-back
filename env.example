# HumanLayer Daemon Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Path to SQLite database file
# Default: ~/.humanlayer/daemon.db (development), /app/data/daemon.db (production)
HUMANLAYER_DATABASE_PATH=/app/data/daemon.db

# =============================================================================
# HTTP SERVER CONFIGURATION
# =============================================================================

# Port for HTTP REST API
# Default: 7777
HUMANLAYER_DAEMON_HTTP_PORT=7777

# Host for HTTP server
# Use 0.0.0.0 for production to accept external connections
# Use 127.0.0.1 for local development only
# Default: 127.0.0.1 (development), 0.0.0.0 (production)
HUMANLAYER_DAEMON_HTTP_HOST=0.0.0.0

# =============================================================================
# SOCKET CONFIGURATION (OPTIONAL)
# =============================================================================

# Unix socket path for local IPC communication
# Leave empty to disable Unix socket
# Default: ~/.humanlayer/daemon.sock
# HUMANLAYER_DAEMON_SOCKET=~/.humanlayer/daemon.sock

# =============================================================================
# AI SERVICE CONFIGURATION
# =============================================================================

# Anthropic (Claude) API Key
# Required for AI coding agent functionality
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxx

# OpenAI API Key (if using OpenAI models)
# OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxx

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level: debug, info, warn, error
# Default: info
LOG_LEVEL=info

# Log format: json, text
# Default: text
# LOG_FORMAT=text

# =============================================================================
# DAEMON CONFIGURATION
# =============================================================================

# Custom version string for the daemon
# Useful for tracking deployments
# HUMANLAYER_DAEMON_VERSION_OVERRIDE=production-v1.0.0

# Default CLI command for launching sessions
# HUMANLAYER_DEFAULT_CLI_COMMAND=humanlayer

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Enable CORS (for web-based frontends)
# Default: true
# ENABLE_CORS=true

# Allowed CORS origins (comma-separated)
# Default: * (allow all origins in development)
# CORS_ALLOWED_ORIGINS=https://your-frontend.com,https://app.yourdomain.com

# API authentication token (optional)
# If set, all API requests must include this token in the Authorization header
# API_AUTH_TOKEN=your-secret-token-here

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Maximum number of concurrent sessions
# Default: 10
# MAX_CONCURRENT_SESSIONS=10

# Session timeout in minutes
# Default: 60 (1 hour)
# SESSION_TIMEOUT_MINUTES=60

# Database connection pool size
# Default: 10
# DB_MAX_CONNECTIONS=10

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable experimental features
# ENABLE_EXPERIMENTAL_FEATURES=false

# Enable telemetry/analytics
# ENABLE_TELEMETRY=true

# =============================================================================
# INTEGRATION CONFIGURATION
# =============================================================================

# Slack webhook URL for notifications (optional)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# GitHub token for repository access (optional)
# GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxxx

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Environment: development, staging, production
NODE_ENV=production

# Port (Render.com sets this automatically)
# PORT=7777

# =============================================================================
# ELECTRIC SQL CONFIGURATION (if using real-time sync)
# =============================================================================

# PostgreSQL connection string
# DATABASE_URL=postgresql://user:password@host:5432/dbname?sslmode=disable

# Electric SQL endpoint
# ELECTRIC_URL=http://localhost:3000

